<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %>

  <%= f.label :street_address %>
  <%= f.text_field :street_address, required: true %>

  <%= f.label :city %>
  <%= f.text_field :city, required: true %>

  <%= f.label :state %>
  <%= f.text_field :state, required: true %>

  <%= f.label :zip_code %>
  <%= f.text_field :zip_code, required: true %>

  <%= f.label :email %>
  <%= f.text_field :email, required: true %>

  <%= f.label :password %>
  <%= f.password_field :password, required: true %>

  <%= f.label :confirm_password %>
  <%= f.password_field :confirm_password, required: true %>

  <%= f.submit %>
<% end %>
