<container class='login'>
    <div class="form">
      <h1>Log In</h1>
      <br>
      <%= form_tag login_path do %>
        <div class="label-input">
          <%= label_tag :email %>
          <br>
          <%= text_field_tag :email, nil, required: true %>
        </div>
        <div class="label-input">
          <%= label_tag :password %>
          <br>
          <%= password_field_tag :password, nil, required: true %>
        </div>
        <br>
        <div class="label-input">
          <%= submit_tag "Log In" %>
        </div>
        <br>
      <% end %>

      </div>
</container>
