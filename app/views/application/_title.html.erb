<!---Title Block--->
<section class="title-block full">
  <section class="title-full">
    <h1>Little Shop of Hors d'Oeuvres</h1>
  </section>
  <section class="title-personal">
    <section class="login-status">
      <% if current_user %>
        Logged in as <%= current_user.name %>
      <% end %>
    </section>
    <div class="cart-nav">
      <% if !current_user || current_user.registered? %>
        <p>
          <a href="/cart" class="btn btn-info btn-lg">
            <span class="glyphicon glyphicon-shopping-cart"></span> Cart (<%= @cart.total_count %>)
          </a>
        </p>
      <% end %>
    </div>
  </section>
</section>
