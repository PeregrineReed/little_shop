<div class="item-list">
  <% @items.each do |item| %>
  <div class="id-<%=item.id%>-row">
    <div class="left-column">
      <p> <%= image_tag item.image_url %></p>
    </div>
    <div class="middle-column">
      <p><%= item.title %></p>
      <p>Current Price: $<%= item.price %></p>
      <p>Qty: <%= item.quantity %></p>
    </div>
    <div class="right-column">
      <% if @view=="Cart" %>
        <p>Subtotal: $<%= item.subtotal %></p>
      <% end %>
        <p>Sold By: <%= item.user.name %></p>
    </div>
  </div>
  <% end %>
  <%= link_to "Empty Cart", cart_path %>
</div>
